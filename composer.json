{
	"name": "spaze/netxten",
	"description": "Various Nette Framework extension services",
	"license": "MIT",
	"require": {
		"php": "^8.0",
		"ext-intl": "*",
		"nette/application": "^3.0",
		"nette/caching": "^3.1",
		"nette/utils": "^3.0",
		"nette/forms": "^3.0",
		"nette/http": "^3.0",
		"latte/latte": "^2.3",
		"texy/texy": "^3.0"
	},
	"autoload": {
		"psr-0": {"Netxten": "src"}
	},
	"require-dev": {
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"php-parallel-lint/php-console-highlighter": "^1.0",
		"phpstan/phpstan": "^1.6",
		"spaze/coding-standard": "^0.0"
	},
	"scripts": {
		"lint": "vendor/bin/parallel-lint --colors src/",
		"phpcs": "vendor/bin/phpcs src/",
		"cs-fix": "vendor/bin/phpcbf src/",
		"phpstan": "vendor/phpstan/phpstan/phpstan --ansi analyse --configuration phpstan.neon",
		"test": [
			"@lint",
			"@phpcs",
			"@phpstan"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
